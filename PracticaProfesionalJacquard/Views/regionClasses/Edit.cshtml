@model PracticaProfesionalJacquard.Models.regionClass

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Informacion Region</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdRegion" />
            <div class="form-group">
                <label asp-for="NumeroRegion" class="control-label"> Numero Region</label>
                <input asp-for="NumeroRegion" class="form-control" />
                <span asp-validation-for="NumeroRegion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AreaKm" class="control-label"> Area Km^2</label>
                <input asp-for="AreaKm" class="form-control" />
                <span asp-validation-for="AreaKm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Poblacion" class="control-label"></label>
                <input asp-for="Poblacion" class="form-control" />
                <span asp-validation-for="Poblacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
